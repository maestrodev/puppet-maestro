#!/bin/sh

# proxy variables
if [ -f /etc/profile.d/proxy.sh ]
then
  . /etc/profile.d/proxy.sh
fi

# variables need to be exported to be used in wrapper.conf or app
# Other vars just used in init.d script don't need to

export JAVA_HOME=/usr/lib/jvm/java
export MAESTRO_ENV=production
RUN_AS_USER=<%= @agent_user %>

export MAESTRO_HOME=<%= @agent_user_home %>
export HOME=$MAESTRO_HOME
# export MAESTRO_CONFIG=$MAESTRO_HOME/conf/maestro_agent.json
# export MAESTRO_LOG=$MAESTRO_HOME/logs/agent.log

PIDDIR=$MAESTRO_HOME/logs
WRAPPER_CONF=$MAESTRO_HOME/conf/wrapper.conf
WRAPPER_CMD=<%= @basedir %>/bin/wrapper
